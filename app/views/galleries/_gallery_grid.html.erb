<div class="gallery-grid">
  <% gallery.media.each do |medium| %>
    <div class="gallery-item">
      <%= link_to image_tag(medium.thumbnail), data: {
          controller: 'lightbox',
          lightbox_src: url_for(medium.medium_file)
      } %>
      <p><%= medium.title %></p>
      <% if medium.caption.present? %>
        <p><%= medium.caption %></p>
      <% end %>
    </div>
  <% end %>
</div>
