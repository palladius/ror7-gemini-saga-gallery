<div class="media-card">
  <%= link_to image_tag(medium.thumbnail), medium, data: {
      controller: 'lightbox',
      lightbox_src: url_for(medium.medium_file)
  } %>
  <% if medium.caption.present? %>
    <p class="mt-2 text-sm text-gray-600">Caption: <i><%= medium.caption %></i></p>
  <% end %>
</div>
