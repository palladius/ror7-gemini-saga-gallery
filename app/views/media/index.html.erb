<p style="color: green"><%= notice %></p>

<% content_for :title, "Media" %>

<h1 class="text-3xl font-bold mb-6">Media</h1>

<div id="media" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
  <% @media.each do |medium| %>
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      <%#= render medium %>
      <%= render 'card', medium: medium %> <%# Render the card partial %>
    </div>
  <% end %>
</div>

<%= link_to "New medium", new_medium_path,
            class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded mt-4 inline-block" %>
